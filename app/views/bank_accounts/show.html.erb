  <div class="row">
    <h2 class="text-center main-heading-margin-bottom">Account Details</h2>
  </div>

  <div class="row">
    <div id="acct-details" class="acct-desc">
    </div>
    <div id='action-links'>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#edit-account-modal">
