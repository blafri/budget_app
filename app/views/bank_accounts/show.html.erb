  </div>

  <div class="row">
    <div class="content-panel">
        <div class="content-panel__heading">
          <h3 class="content-panel__heading__title">Accounts Transactions</h3>
        </div> <!-- /.content-panel__heading -->
        <!-- render patial -->
      </div> <!-- /.content-panel -->
  </div>

</div> <!-- /.container -->

