<table class="table">
  <tr>
    <th>Account Name</th>
    <th>Balance</th>
    <th>Links</th>
  </tr>
  <%= content_tag_for :tr, accounts do |account| %>
    <td><%= account.name %></td>
    <td><%= number_to_currency account.balance %></td>
    <td>
      <button type="button" class="btn btn-primary btn-xs" data-content-path="<%= edit_bank_account_path(account) %>" data-toggle="modal" data-target="#dashboard-modal">Edit</button> | 
      <%= link_to 'Delete', bank_account_path(account), method: :delete, class: 'btn btn-danger btn-xs',
                                                        data: { confirm: 'Are you sure you want to delete this bank account?' } %>
    </td>
  <% end %>
</table> <!-- /.table -->