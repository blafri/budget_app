<% if accounts.empty? %>
  <div class="content--panel__body">
    <p>You have not added any bank accounts.</p>
    <%= link_to 'Add Bank Account', new_bank_account_path, class: 'btn btn-primary btn-block' %>
  </div>
<% else %>

  <div class="content--panel__body--table">
    <table class="table">
      <tr>
        <th>Account Name</th>
        <th>Balance</th>
        <th>Delete</th>
      </tr>
      <%= content_tag_for :tr, accounts do |account| %>
        <td><%= account.name %></td>
        <td><%= number_to_currency account.balance %></td>
        <td>
          <%= link_to bank_account_path(account), method: :delete, id: "del-account-#{account.id}" , data: { confirm: 'Are you sure you want to delete this account?' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>
      <% end %>
    </table> <!-- /.table -->
  </div> <!-- /.content--panel__content--table -->

<% end %>
