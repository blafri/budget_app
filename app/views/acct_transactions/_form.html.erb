<%= form_for [account, trans], remote: true do |f| %>
  <div class="form-errors">
  </div> <!-- /.form-errors -->

  <div class="form-group">
    <%= f.label :trans_type %>
    <%= f.select :trans_type, trans_type_arr, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, step: '0.01', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>