// Clear current errors if they are any
$( '#new_acct_transaction .form-errors' ).empty();
$( '#new_acct_transaction .form-group' ).removeClass( 'has-error' );

// Check if the account was saved successfully
<% if @trans.persisted? %>

  // If it was saved reload the page
  window.location.replace('<%= root_path %>');

<% else %>

  // Else display the errors
  $( '#new_acct_transaction .form-errors' ).append( '<%= j(display_form_errors(@trans)) %>' );

  <% if @trans.errors[:trans_type].any? %>
    $( '#acct_transaction_trans_type' ).parent().addClass( 'has-error' );
  <% end %>

  <% if @trans.errors[:amount].any? %>
    $( '#acct_transaction_amount' ).parent().addClass( 'has-error' );
  <% end %>

  <% if @trans.errors[:description].any? %>
    $( '#acct_transaction_description' ).parent().addClass( 'has-error' );
  <% end %>

<% end %>
